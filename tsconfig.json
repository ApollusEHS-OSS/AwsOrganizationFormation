{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny" : false,
        "outDir" : "dist",
        "module": "commonjs",
        "target": "ES2017",
        "esModuleInterop": true,
        "sourceMap": true
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }],
    "include": [ "src/**/*", "index.ts", "cli.ts"],
    "exclude": [ "node_modules", "dist"],
    "typeRoots": [
        "node_modules/@types"
      ],
    "types": [
        "node"
      ]
 }