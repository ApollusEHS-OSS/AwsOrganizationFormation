{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny" : false,
        "outDir" : "output",
        "module": "commonjs",
        "target": "ES2017",
        "rootDir": "src",
        "sourceMap": true
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }],
    "include": ["src/**/*"],
    "exclude": [ "node_modules"],
    "typeRoots": [
        "node_modules/@types"
      ],
    "types": [
        "node"
      ]
 }